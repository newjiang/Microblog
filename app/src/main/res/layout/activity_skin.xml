<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="skin:main_bg:background"
    tools:context="com.example.jiang.microblog.view.setting.SkinActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/default_skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="默认样式"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/night_skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="@color/iconCoverDark"/>
    </LinearLayout>

</RelativeLayout>
