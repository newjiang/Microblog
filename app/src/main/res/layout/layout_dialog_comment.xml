<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="bottom"
              android:background="@color/background_light">
    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:gravity="top"
        android:layout_margin="10dp"
        android:hint="添加评论..."
        android:textColorHint="#88888888"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/image_ic_at"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/edit_comment"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_at"
        android:tint="#cc393939"
        android:tintMode="multiply"/>



    <ImageView
        android:id="@+id/image_comment_send"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/edit_comment"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_send"
        android:tint="#88888888"
        android:tintMode="multiply"/>

    <TextView
        android:id="@+id/is_retweeted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="是否转发到微博"
        android:layout_alignBaseline="@+id/is_retweeted"
        android:layout_alignBottom="@+id/is_retweeted"
        android:layout_toEndOf="@+id/image_ic_at"
        android:layout_marginStart="10dp" />
    <CheckBox
        android:id="@+id/is_retweeted"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/edit_comment"
        android:layout_toEndOf="@id/is_retweeted_text"/>
</RelativeLayout>